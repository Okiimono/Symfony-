{% extends 'base.html.twig' %}

{% block title %}{% trans %}boutique.index.titre{% endtrans %}{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h3>
                <a href="{{ path('app_default_index') }}" class="text-white text-decoration-none mr-2">
                    <i class="fas fa-arrow-circle-left"></i>
                </a>
                <i class="fas fa-store"></i>
                {% trans %}boutique.index.titre{% endtrans %}
                <span class="badge badge-pill badge-info">{{ categories|length }}</span>
                {% trans %}boutique.index.rayons_proposes{% endtrans %}
            </h3>
        </div>

        <div class="card-body row">
            {% for categorie in categories %}
                <div class="card clickable col-md-3">
                    <a href="{{ path('app_boutique_rayon', {idCategorie: categorie.id}) }}" class="text-decoration-none text-dark">
                        <div class="card h-100">
                            <img src="{{ asset(categorie.visuel) }}" class="card-img-top" alt="{{ categorie.libelle }}">
                            <div class="card-body">
                                <h4 class="card-title">{{ categorie.libelle }}</h4>
                                <p class="card-text">
                                    <i>{{ categorie.texte }}</i>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
